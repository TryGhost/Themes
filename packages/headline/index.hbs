{{!< default}}

{{#if @site.cover_image}}
    <div class="gh-cover">
        <img class="gh-cover-image"
            srcset="{{img_url @site.cover_image size="s"}} 300w,
                    {{img_url @site.cover_image size="m"}} 720w,
                    {{img_url @site.cover_image size="l"}} 960w,
                    {{img_url @site.cover_image size="xl"}} 1200w,
                    {{img_url @site.cover_image size="xxl"}} 2000w"
            sizes="100vw"
            src="{{img_url @site.cover_image size="xxl"}}"
            alt="{{title}}"
        >
    </div>
{{/if}}

<main class="gh-main gh-outer">
    <div class="gh-inner">
        <div class="gh-feed">
            {{#foreach posts}}
                {{> loop}}
            {{/foreach}}
        </div>

        {{pagination}}
        {{!-- <button class="gh-loadmore gh-btn">Load more</button> --}}
    </div>
</main>
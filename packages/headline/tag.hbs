{{!< default}}

<main class="gh-main gh-outer">
    <div class="gh-inner">
        {{#tag}}
            <section class="gh-pagehead">
                {{#if feature_image}}
                    <img class="gh-pagehead-image" src="{{img_url feature_image size="s"}}" alt="{{name}}">
                {{/if}}

                <header class="gh-pagehead-content">
                    <h1 class="gh-tag-name gh-pagehead-title">{{name}}</h1>

                    {{#if description}}
                        <div class="gh-tag-description gh-pagehead-description">{{description}}</div>
                    {{/if}}
                </header>
            </section>
        {{/tag}}

        <div class="gh-feed">
            {{#foreach posts}}
                {{> loop}}
            {{/foreach}}
        </div>

        {{pagination}}
    </div>
</main>
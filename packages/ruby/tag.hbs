{{!< default}}

<div class="gh-outer">
<main class="site-main gh-inner">

    <div class="term-tags">
        {{#tag}}
            <a class="tag tag-current" href="{{url}}">
                <span class="tag-name">{{name}}</span>
            </a>
        {{/tag}}
        {{#get "tags" limit="all" filter="id:-{{tag.id}}"}}
            {{#foreach tags}}
                <a class="tag" href="{{url}}">
                    <span class="tag-name">{{name}}</span>
                </a>
            {{/foreach}}
        {{/get}}
    </div>

    <div class="post-feed gh-feed">
        {{#foreach posts}}
            {{> "loop"}}
        {{/foreach}}
    </div>

</main>
</div>
{{!< default}}

{{> "components/navbar" navigationLayout=@custom.navigation_layout}}

<main class="gh-main">
    {{#post}}
        {{> "components/article" showPrimaryTag=true showPublishedAt=true showAuthors=true showComments=true imageWidth="wide"}}
        {{#unless @site.comments_enabled}}
            {{> "components/cta" title=(concat "Sign up for " @site.title) description=@custom.email_signup_text}}
        {{/unless}}
    {{/post}}
    <section class="gh-related gh-outer">
        <div class="gh-related-inner gh-inner">
            <h4 class="gh-related-title">Read next</h4>
            <div class="gh-related-feed">
                {{#get "posts" include="tags" filter="tags:[{{post.tags}}]+id:-{{post.id}}" limit="4" as |next|}}
                    {{> "components/list" layout="grid" showExcerpt=true showPrimaryTag=true hasPagination=true}}
                {{/get}}
            </div>
        </div>
    </section>
</main>
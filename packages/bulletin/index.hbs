{{!< default}}

<main id="gh-main" class="gh-main gh-canvas">
    <section class="gh-pagehead">
        <header class="gh-pagehead-content">
            <h1 class="gh-pagehead-title">{{t "Archive"}}</h1>

            <div class="gh-pagehead-description">
                {{#if description}}
                    {{description}}
                {{else}}
                    {{t "A collection of"}} {{plural pagination.total empty=(t "0 issues") singular=(t "% issue") plural=(t "% issues")}}
                {{/if}}
            </div>
        </header>
    </section>

    <div class="gh-feed">
        {{#get "posts" limit="all"}}
            {{#foreach posts}}
                {{> loop}}
            {{/foreach}}
        {{/get}}
    </div>
</main>
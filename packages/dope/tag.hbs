{{!< default}}

<div class="content-area gh-outer">
<main class="site-main gh-inner">

    {{#tag}}
        <section class="term">
            <div class="term-wrapper">
                <h1 class="term-name">{{name}}</h1>
                <div class="term-description">{{description}}</div>
            </div>
        </section>
    {{/tag}}

    <div class="post-feed gh-feed">
        {{#foreach posts}}
            {{> "loop"}}
        {{/foreach}}
    </div>

</main>
</div>
{{!< default}}

<div class="content-area">
    <main class="site-main container">
        {{#tag}}
            <section class="term">
                <div class="term-wrapper">
                    <h1 class="term-name">{{name}}</h1>
                    <div class="term-description">{{description}}</div>
                </div>
            </section>
        {{/tag}}
        <div class="post-feed">
            {{#foreach posts visibility="all"}}
                {{> "loop"}}
            {{/foreach}}
        </div>
        {{pagination}}
    </main>
</div>
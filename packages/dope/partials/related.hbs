{{#get "posts" limit="3" filter="tags:[{{post.tags}}]+id:-{{post.id}}" include="tags" as |related|}}
  {{#if related}}
    <section class="related-posts">
      <h3 class="related-title">You might also like...</h3>
      <div class="post-feed">
        {{#foreach related}}
          <article class="post-list {{post_class}}{{#unless feature_image}} no-image{{/unless}}">
            {{> post-media same_height=true ratio="rectangle"}}
            <div class="post-wrapper">
              {{> post-header}}
              {{> post-footer}}
            </div>
          </article>
        {{/foreach}}
      </div>
    </section>
  {{/if}}
{{/get}}
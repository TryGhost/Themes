<article class="{{post_class}} post-{{comment_id}}">

    {{#if feature_image}}
    <div class="post-media u-placeholder square">
        <a class="post-link" href="{{url}}">
            <img class="post-image u-object-fit" src="{{img_url feature_image size="l"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
        </a>
    </div>
    {{/if}}

    <div class="post-wrapper">
        <header class="post-header">
            <h2 class="post-title">
                <a class="post-title-link" href="{{url}}">{{title}}</a>
            </h2>
            <time class="post-meta" datetime="{{date format="YYYY-MM-DD"}}">{{date published_at}}</time>
        </header>
    </div>

</article>
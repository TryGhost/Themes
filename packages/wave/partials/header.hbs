<header class="site-header">
  <div class="header-left">
    <a class="logo" href="{{@site.url}}">
      <span class="logo-text">{{@site.title}}</span>
    </a>
  </div>
  <div class="header-right">
    {{#if @site.navigation}}
      <nav class="main-nav hidden-xs hidden-sm hidden-md">
        {{navigation}}
      </nav>
    {{/if}}
    {{#if @labs.members}}
      <div class="header-member">
        {{#if @member}}
          <a class="menu-item menu-item-account" href="{{@site.url}}/account/">{{t "Account"}}</a>
          {{#unless @member.paid}}
            <a class="button header-button" href="{{@site.url}}/signup/">{{t "Upgrade"}}</a>
          {{/unless}}
        {{else}}
          <a class="menu-item menu-item-login" href="{{@site.url}}/signin/">{{t "Login"}}</a>
          <a class="button header-button" href="{{@site.url}}/signup/">{{t "Subscribe"}}</a>
        {{/if}}
      </div>
    {{/if}}
    <div class="header-platform">
      <button class="button button-secondary header-button header-button-platform js-popup"><i class="icon icon-window-close"></i></button>
      {{> customize/platform is_popup=true}}
    </div>
    {{#if @site.navigation}}
      <div class="header-menu hidden-lg hidden-xl">
        <button class="button button-secondary header-button header-button-menu js-popup">
          <i class="icon icon-menu"></i>
        </button>
        <div class="popup">
          <div class="mobile-menu">
            {{> navigation}}
          </div>
        </div>
      </div>
    {{/if}}
  </div>
</header>
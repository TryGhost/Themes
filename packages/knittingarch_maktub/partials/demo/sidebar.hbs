<!-- start: #sidebar -->
<aside id="sidebar" class="grid-30 tablet-grid-30 hide-on-tablet hide-on-mobile">

    <!-- start: .recent-articles -->
    <div class="widget widget_epcl_posts_thumbs grid-25 tablet-grid-50 mobile-grid-100">
        <h4 class="widget-title title medium bordered"><span class="bg">{{t "Latest Articles" }}</span><span class="border"></span></h4>
        {{#get "posts" limit="3" include="tags" as |recent-articles| }}
            {{#foreach recent-articles visibility="all"}}
                <article class="{{post_class}} item ctag-{{primary_tag.slug}} no-thumb">
                    <div class="info">
                        <a class="epcl-dropcap small main-effect text-only effect-small" href="{{url}}">
                            <span class="first-letter fake-layout" data-title="{{title}}"></span>
                        </a>
                        <div class="right">
                            <h4 class="title usmall underline-effect"><a href="{{url}}">{{title}}</a></h4>	
                            <time datetime="{{date format='YYYY-MM-DD'}}">{{date}}</time>		
                        </div>				
                    </div>
                    <div class="clear"></div>
                </article>
            {{/foreach}}
        {{/get}}
    </div>
    <!-- end: .recent-articles -->

    {{> widgets/tag-cloud }}

    {{> widgets/social-profiles }}

    {{> widgets/advertising }}
	
</aside>
<!-- end: #sidebar -->
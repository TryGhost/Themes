{{!< default}}

<!-- start: #page-404 -->
<main id="page-404" class="main grid-container">

	<!-- start: .center -->
	<div class="center content">

        <article>
            <div class="not-found section grid-container grid-small">
                <h2 class="title ularge"><strong>404</strong><br>{{t "Page not found" }}</h2>
            </div>
            <div class="text textcenter">
                <h3 class="title no-margin">{{t "Something's wrong here..." }}</h3>
                <p>{{t "We can't find the page you're looking." }}</p>
            </div>
            <div class="buttons">
                <a href="{{@site.url}}" class="epcl-button bordered dark" data-title="{{t "Go back to home" }}">{{t "Go back to home" }}</a>
            </div>
            
        </article>
        
        <div class="clear"></div>

	</div>
	<!-- end: .center -->
</main>
<!-- end: #page-404 -->

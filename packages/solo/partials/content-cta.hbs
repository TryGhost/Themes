{{{html}}}

<section class="gh-cta">
    {{#has visibility="paid"}}
        <h4 class="gh-cta-title">{{t "cta.paidOnly" }}</h4>
    {{/has}}
    {{#has visibility="members"}}
        <h4 class="gh-cta-title">{{t "cta.subscribersOnly" }}</h4>
    {{/has}}
    {{#has visibility="filter"}}
        <h4 class="gh-cta-title">{{t "cta.tierOnly" tiers=tiers }}</h4>
    {{/has}}

    <div class="gh-cta-actions">
        {{#if @member}}
            <button class="gh-btn gh-primary-btn" href="#/portal/account/plans" data-portal="account/plans">{{t "cta.upgrade" }}</button>
        {{else}}
            <button class="gh-btn gh-primary-btn" href="#/portal/signup" data-portal="signup">{{t "cta.subscribe" }}</button>
            <span class="gh-cta-link" href="#/portal/signin" data-portal="signin">{{t "cta.signIn" }}</span>
        {{/if}}
    </div>
</section>
{{!< default}}

<main class="site-main">

    {{#post}}
        {{> "content" width="narrow"}}
        {{#if comments}}
            <div class="gh-comments gh-canvas">
                {{comments}}
            </div>
        {{/if}}
    {{/post}}

    {{#is "post"}}
        {{#if @custom.show_related_posts}}
            {{> "related-posts"}}
        {{/if}}
    {{/is}}

</main>